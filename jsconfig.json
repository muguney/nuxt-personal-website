{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "baseUrl": "./",
    "jsx": "preserve",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    }
  },
  "include": [
    "**/*",
    "src/**/*.vue",
    "src/**/*.js"
  ],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
